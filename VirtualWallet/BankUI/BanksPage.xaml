<Page
    x:Class="VirtualWallet.BanksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualWallet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <ListView Margin="10" ItemsSource="{Binding Banks}" SelectedItem="{Binding SelectedBank}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <RelativePanel Height="100" Width="100" Tapped="RelativePanel_Tapped" VerticalAlignment="Bottom">
                            <Image RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" x:Name="BankImage" Source="{Binding ImageUri}" MaxWidth="80" MaxHeight="80"/>
                            <TextBlock RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Text="{Binding Name}" RelativePanel.Below="BankImage"/>
                        </RelativePanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </RelativePanel>
    </Grid>
</Page>
